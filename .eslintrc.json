{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:all", "plugin:react/all"],
    "rules": {
        "linebreak-style": "off",
        "one-var": "off",
        "no-extra-parens": ["error", "all", {"ignoreJSX": "multi-line"}],
        "react/prop-types": "off",
        "react/jsx-max-props-per-line": ["error", {"maximum": 4}]
    },
    "settings": {
        "ignoreJSX": "multi-line"
    }
}